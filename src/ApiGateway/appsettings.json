{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "m5UMQ+t/NN8XIi4dO/wCpQMJtBLkRbT6/R4AnEsvU58=",
    "Issuer": "api",
    "Audience": "api-service",
    "ExpireMinutes": 60,
    "SecurityAlgorithm": "HS256"
  },
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "users_cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ]
      },
      "orders": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "products": {
        "ClusterId": "products_cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "users_cluster": {
        "Destinations": {
          "users": { "Address": "http://userservice:8080" }
        }
      },
      "orders_cluster": {
        "Destinations": {
          "orders": { "Address": "http://orderservice:8020" }
        }
      },
      "products_cluster": {
        "Destinations": {
          "products": { "Address": "http://productservice:8010" }
        }
      }
    }
  }
}
